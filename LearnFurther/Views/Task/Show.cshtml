@model LearnFurther.ViewModels.ShowTaskViewModel

<form asp-controller="Task" asp-action="Check">
    <div class="form-group">
        <label class="form-label" asp-for="Title">@Model.Title</label>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Description">@Model.Description</label>
    </div>
    @for (int i = 0; i < Model.Questions.Count; i++)@*@foreach(var question in Model.Questions)*@
    {
    <div class="d-flex justify-content-around row">
        @*<label asp-for="@question.Context" class="control-label">@question.Context</label>*@
        <label class="control-label">@Model.Questions[i].Context</label>
    </div>
        int x = 0;
     <div class="d-flex justify-content-around row">
         @foreach (var answer in Model.Questions[i].Answers)
         {
             <div class="form-check" >
             <input class="form-check-input" type="checkbox" id = "Questions[@i].UserAnswers[@x].State" name = "Questions[@i].UserAnswers[@x].State" value="true">
             <label class="form-control ml-2 mb-2" name = "Model.Questions[@i].UserAnswers[@x].State" >
                 @answer.Content
             </label>
                 Model.Questions[@i].UserAnswers[@x].User = @Model.TestPerson;
             </div>
             x++;
         }
     </div>
    }
    <button class="btn btn-outline-dark mt-3" type="submit" asp-action="Check">Завершить выполнение</button>
</form>