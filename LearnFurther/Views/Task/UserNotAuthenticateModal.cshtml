@model string

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
    </div>
    <div class="modal-body">
        @Model
    </div>
    <div class="modal-footer">
        <a type="submit" asp-controller="Account" asp-action="Login" class="btn btn-primary" id="myBtn" formmethod="get">Авторизоваться</a>
        <a type="button" asp-controller="Account" asp-action="Register" class="btn btn-primary" id="myBtn" formmethod="get">Зарегистрироваться</a>
    </div>
</div>